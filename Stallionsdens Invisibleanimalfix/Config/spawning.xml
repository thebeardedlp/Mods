		</insertAfter>
<insertAfter xpath="/spawning/biome[@name='burnt_forest']/spawn[@entitygroup='ZombiesNight']">
		<spawn maxcount="2" respawndelay="1" time="Any" entitygroup="WildGameForest" spawnDeadChance="0"/>
		</insertAfter>		
<insertAfter xpath="/spawning/biome[@name='desert']/spawn[@entitygroup='ZombiesNight']">
		<spawn maxcount="2" respawndelay="1" time="Any" entitygroup="WildGameForest" spawnDeadChance="0"/>
		</insertAfter>		
<insertAfter xpath="/spawning/biome[@name='wasteland']/spawn[@entitygroup='ZombiesWastelandNight']">
		<spawn maxcount="2" respawndelay="1" time="Any" entitygroup="EnemyAnimalsWasteland" spawnDeadChance="0"/>
		</insertAfter>
<insertAfter xpath="/spawning/biome[@name='snow']/spawn[@entitygroup='ZombiesNight']">
		<spawn maxcount="2" respawndelay="1" time="Any" entitygroup="WildGameForest" spawnDeadChance="0"/>
