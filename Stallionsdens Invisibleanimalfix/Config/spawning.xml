<stallionsden>
<remove xpath="/spawning/biome[@name='pine_forest']/spawn[@entitygroup='WildGameForest']"></remove>
<remove xpath="/spawning/biome[@name='burnt_forest']/spawn[@entitygroup='WildGameForest']"></remove>
<remove xpath="/spawning/biome[@name='desert']/spawn[@entitygroup='WildGameForest']"></remove>
<remove xpath="/spawning/biome[@name='wasteland']/spawn[@entitygroup='EnemyAnimalsWasteland']"></remove>
